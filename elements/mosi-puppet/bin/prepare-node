set -e

SUDO=${SUDO:-true}
THIN=${THIN:-true}
ALL_MYSQL_PRIVS=${ALL_MYSQL_PRIVS:-false}

GIT_BASE='ssh://mos-infra-ci@review.fuel-infra.org:29418'
PROJECT_CONFIG_NAME='mos-infra/project-config'
PROJECT_CONFIG_REVISION='mosi'


if [ -n "$NODEPOOL_SSH_KEY" ] ; then
    puppet_install_users="ssh_key => '$NODEPOOL_SSH_KEY',"
else
    puppet_install_users=""
fi

export FACTER_in_chroot=true
cat >/tmp/local.pp <<EOF
Service {
  start   => '/bin/true',
  stop    => '/bin/true',
  status  => '/bin/true',
  restart => '/bin/true'
}
class {'openstack_project::single_use_slave':
  sudo => $SUDO,
  thin => $THIN,
  all_mysql_privs => $ALL_MYSQL_PRIVS,
  enable_unbound => false,
  project_config_repo => '${GIT_BASE}/${PROJECT_CONFIG_NAME}',
  project_config_revision => '${PROJECT_CONFIG_REVISION}',
  $puppet_install_users
}
EOF

# Puppet doesn't return nonzero if some things fail by default.
# Use detailed exit codes to get that info and determine whether
# the return code indicates failure.
set +e
puppet apply \
  --debug --verbose \
  --color=false \
  --detailed-exitcodes \
  --modulepath=/opt/git/mos-infra/system-config/modules:/etc/puppet/modules \
  /tmp/local.pp | tee /var/log/puppet-apply.log
PUPPET_RETURN=$?
if [ "$PUPPET_RETURN" -eq 4 ] || [ "$PUPPET_RETURN" -eq 6 ] ; then
    exit $PUPPET_RETURN
fi
set -e

# Make sure resolv.conf settings don't break dib
#echo 'nameserver 8.8.8.8'> /etc/resolv.conf
